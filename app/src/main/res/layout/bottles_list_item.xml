<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_bottles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kinley"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_openingStock"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
     <EditText
        android:id="@+id/et_opening_cottonBox"
        android:background="@drawable/et_bg"
        android:layout_width="40dp"
        android:gravity="center"
         android:singleLine="true"
         android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="10"
       />
        <EditText
            android:id="@+id/et_opening_looseBottle"
            android:background="@drawable/et_bg"
            android:layout_width="40dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:hint="2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_closingStock"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_closing_cottonBox"
            android:background="@drawable/et_bg"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:gravity="center"
            android:singleLine="true"
            android:hint="10"
            />
        <EditText
            android:id="@+id/et_closing_looseBottle"
            android:background="@drawable/et_bg"
            android:layout_width="40dp"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:hint="2"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDiscount"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDamagedItems"
    android:layout_weight="4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        />
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_TotalItems"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000"
            />
    </LinearLayout>
</LinearLayout>
